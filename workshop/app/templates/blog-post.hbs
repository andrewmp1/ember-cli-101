<article>
  <header class="page-header">
    <h1>{{model.title}}</h1>
  </header>
  <p>{{model.body}}</p>

  <h2>Comments</h2>
  {{#if model.comments.isPending}}Loading...{{/if}}
  {{#if model.comments}}
  <ul>
  {{#each model.comments as |comment|}}
    <li>{{comment.content}}</li>
  {{/each}}
  </ul>
  {{else}}
    There are no comments yet.  
  {{/if}}
</article>